<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Futsal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#1566e0</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/animation</item>
    </style>

   <style name="btnTheme">
       <item name="backgroundTint">#1566e0</item>
   </style>

    <style name="btnTheme2">
        <item name="backgroundTint">#E6860D</item>
    </style>



    <style name="futsalBtn">
        <item name="backgroundTint">#0689D1</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="verticalNav">
        //color of text and icon when selected
        <item name="colorPrimary">#E64A19</item>
        //background color when selected
        <item name="colorControlHighlight"> @color/black </item>
    </style>
</resources>