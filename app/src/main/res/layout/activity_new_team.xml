<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"

    tools:context=".NewTeamActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create A Team"
            android:elevation="10dp"
            android:backgroundTint="#FBC02D"
            android:id="@+id/btnCreateTeam"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topRanker"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="4dp"
            android:id="@+id/tvTopRanker"/>

    </LinearLayout>



    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#45CAC7C7"
        android:hint="Search teams..."
        android:drawableLeft="@drawable/ic_search"
        android:id="@+id/tvSearch"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="2 Teams"
        android:layout_gravity="end"
        android:textColor="@color/black"
        android:id="@+id/tvTeams"/>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:background="@color/white"
        android:elevation="6dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/ivTeamLogo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Logo"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Name"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/tvTeam"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Players"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/tvPlayers"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Age Group"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/tvAgeGroup"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler"
        android:layout_margin="5dp"
        />

</LinearLayout>