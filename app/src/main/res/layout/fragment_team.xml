<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivLogo"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:src="@drawable/futsal"
                android:layout_margin="4dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATS"
                android:backgroundTint="#377105"
                android:layout_gravity="center"
                android:id="@+id/btnStats"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:background="#CECDD1"
            android:layout_margin="4dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/tvTeamName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Team Genexus"
                android:textColor="#E64A19"
                android:textStyle="bold"
                android:textSize="21sp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvTeamCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#123456"
                android:layout_marginRight="3dp"
                android:textColor="@color/black"/>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_marginBottom="3dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSeason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Players"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvSeasonCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="0"
                android:textColor="@color/black" />

        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginBottom="3dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Points"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tvPointsObtained"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="135"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginBottom="3dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tier"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tvTierReached"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bronze V"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginBottom="3dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBattles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Battles"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tvBattleCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginBottom="3dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight="0.2"
                    />

                <TextView
                    android:id="@+id/tvTitleName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="S1 Legend"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginBottom="3dp"/>




        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#CECDD1"
        android:padding="4dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnBattleLog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Battle Log"
            android:backgroundTint="#0273B1"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />



        <Button
            android:id="@+id/btnTournamentLog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tournament Log"
            android:backgroundTint="#303F9F"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />



    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Players"
        android:layout_gravity="center"
        android:textColor="#015380"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#CECDD1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRequests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Requests"
            android:backgroundTint="#388E3C"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:backgroundTint="#034D75"
            android:layout_weight="1"
            android:layout_margin="3dp"

            />

        <Button
            android:id="@+id/btnLeave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Leave"
            android:backgroundTint="#FD030C"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/btnDisband"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Disband"
            android:backgroundTint="#FD030C"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:visibility="gone"
            />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="3dp"
        android:id="@+id/recycler"/>


    <Button
        android:id="@+id/btnSearchMatch"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:backgroundTint="#689F38"
        android:text="Search a Match"/>



</LinearLayout>
</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>