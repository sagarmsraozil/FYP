<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe"
    android:layout_margin="7dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:src="@drawable/futsal"
                        android:layout_margin="4dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATS"
                        android:backgroundTint="#377105"
                        android:layout_gravity="center"
                        android:id="@+id/btnStats"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:background="#CECDD1"
                    android:layout_margin="4dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:id="@+id/tvTeamName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Team Genexus"
                            android:textColor="#E64A19"
                            android:textStyle="bold"
                            android:textSize="21sp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/tvTeamCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#123456"
                            android:layout_marginRight="3dp"
                            android:textColor="@color/black"/>




                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white"
                        android:layout_marginBottom="3dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSeason"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Players"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/tvSeasonCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="0"
                            android:textColor="@color/black" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white"
                        android:layout_marginBottom="3dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPoints"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Total Points"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/tvPointsObtained"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="135"
                            android:layout_marginRight="3dp"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white"
                        android:layout_marginBottom="3dp"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTier"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Tier"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/tvTierReached"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bronze V"
                            android:layout_marginRight="3dp"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white"
                        android:layout_marginBottom="3dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvBattles"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Battles"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/tvBattleCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_marginRight="3dp"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white"
                        android:layout_marginBottom="3dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_weight="0.3"
                            />

                        <TextView
                            android:id="@+id/tvTitleName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="S1 Legend"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:gravity="end"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white"
                        android:layout_marginBottom="3dp"/>




                </LinearLayout>



            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Request to join"
                android:backgroundTint="#FA0202"
                android:id="@+id/btnReqToJoin"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Players"
                android:layout_gravity="center"
                android:textColor="#015380"
                android:textSize="20sp"
                android:textStyle="bold"/>




            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:id="@+id/recycler"/>






        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>