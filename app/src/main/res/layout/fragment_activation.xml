<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="18dp"
    android:padding="5dp"
    android:layout_margin="12dp"
    tools:context=".fragments.verticalNav.ActivationFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/activation"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etOne"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="3dp"
            android:background="@drawable/txt_code"
            android:maxLength="1"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/etTwo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="3dp"
            android:maxLength="1"
            android:background="@drawable/txt_code"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/etThree"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="3dp"
            android:maxLength="1"
            android:background="@drawable/txt_code"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/etFour"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="3dp"
            android:maxLength="1"
            android:background="@drawable/txt_code"
            android:textAlignment="center"/>


    </LinearLayout>

    <Button
        android:id="@+id/btnActivate"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Activate"
        android:backgroundTint="#418802"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        />


    <TextView
        android:id="@+id/resendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Havenot received Code? Resend"
        android:layout_gravity="end"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_marginTop="3dp"/>


</LinearLayout>